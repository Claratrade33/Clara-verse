/* Reset b√°sico */
body, html {
    margin: 0;
    padding: 0;
    font-family: 'Segoe UI', sans-serif;
    background-color: #0c0f14;
    color: #e0e6ed;
}

/* DASHBOARD INICIAL */
.dashboard-inicial {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    flex-direction: column;
    text-align: center;
}

.logo {
    width: 120px;
    margin-bottom: 20px;
}

.container-dashboard h1 {
    font-size: 2em;
    color: #68a0ff;
}

.container-dashboard p {
    font-size: 1.1em;
    margin-bottom: 20px;
    color: #ccc;
}

.btn-principal {
    background-color: #68a0ff;
    color: white;
    padding: 12px 24px;
    text-decoration: none;
    font-weight: bold;
    border-radius: 8px;
    transition: 0.3s;
}

.btn-principal:hover {
    background-color: #407bdb;
}

/* LOGIN */
form {
    max-width: 400px;
    margin: 100px auto;
    background-color: #1c1f26;
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0 0 15px rgba(0,0,0,0.5);
}

form h2 {
    text-align: center;
    margin-bottom: 20px;
    color: #68a0ff;
}

form input {
    width: 100%;
    padding: 12px;
    margin: 10px 0;
    border: none;
    border-radius: 6px;
    background-color: #2d313a;
    color: white;
}

form button {
    width: 100%;
    padding: 12px;
    background-color: #68a0ff;
    color: white;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-weight: bold;
}

form button:hover {
    background-color: #407bdb;
}

.erro {
    color: red;
    text-align: center;
}

/* PAINEL */
.painel {
    display: flex;
    height: 100vh;
}

.menu-lateral {
    width: 220px;
    background-color: #1c1f26;
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.menu-lateral h1.logo-menu {
    font-size: 22px;
    color: #68a0ff;
    margin-bottom: 30px;
}

.menu-lateral button,
.menu-lateral a {
    background-color: #2d313a;
    color: white;
    border: none;
    padding: 10px;
    border-radius: 6px;
    text-align: left;
    text-decoration: none;
    font-weight: bold;
    transition: background 0.3s;
    cursor: pointer;
}

.menu-lateral button:hover,
.menu-lateral a:hover {
    background-color: #68a0ff;
}

.btn-sair {
    margin-top: auto;
    background-color: #ff4d4d;
}

.btn-sair:hover {
    background-color: #ff1f1f;
}

.painel-central {
    flex: 1;
    padding: 20px;
    background-color: #0c0f14;
}

.grafico iframe {
    border: none;
    border-radius: 10px;
}

.dados-mercado {
    margin-top: 20px;
    background-color: #1c1f26;
    padding: 15px;
    border-radius: 8px;
}

/* MODAL */
.modal {
    display: none;
    position: fixed;
    z-index: 10;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.7);
}

.modal-conteudo {
    background-color: #2d313a;
    margin: 10% auto;
    padding: 30px;
    border-radius: 10px;
    width: 90%;
    max-width: 500px;
    position: relative;
}

.fechar {
    position: absolute;
    top: 10px;
    right: 15px;
    color: white;
    font-size: 22px;
    cursor: pointer;
}

.modal-conteudo h2 {
    color: #68a0ff;
    margin-bottom: 20px;
}

.modal-conteudo input {
    width: 100%;
    padding: 10px;
    margin: 10px 0;
    background-color: #1c1f26;
    color: white;
    border: none;
    border-radius: 6px;
}

.botoes-modal button {
    width: 48%;
    padding: 10px;
    margin-top: 10px;
    border: none;
    border-radius: 6px;
    background-color: #68a0ff;
    color: white;
    cursor: pointer;
    font-weight: bold;
}

.botoes-modal button:hover {
    background-color: #407bdb;
}